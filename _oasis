# +-------------------------------------------------------------------+
# | Package parameters                                                |
# +-------------------------------------------------------------------+

OASISFormat:  0.4
Name:         eigen
Version:      0.1
Description:  Eigen is Owl's OCaml interface to Eigen C++ library
Synopsis:     Owl's OCaml interface to Eigen
Authors:      Liang Wang (ryanrhymes@gmail.com)
License:      MIT
Plugins:      META (0.4)
OCamlVersion: >= 4.02
BuildTools:   ocamlbuild
Homepage:     https://github.com/ryanrhymes/eigen

# +-------------------------------------------------------------------+
# | Pre- & Post-build                                                 |
# +-------------------------------------------------------------------+

PreBuildCommand:    ${rm} ${libdir}/libeigen.a;
                    cd lib/;
                    make all;
                    cp libeigen.a ${libdir};
                    make clean;
                    cd -;

PostBuildCommand:   echo "Phew ... it is done!";

# +-------------------------------------------------------------------+
# | Libraries                                                         |
# +-------------------------------------------------------------------+

Library eigen
  Path:             lib
  BuildTools:       ocamlbuild
  Modules:          Eigen,
                    Ffi_eigen_bindings,
                    Ffi_eigen_generated,
                    Eigen_types,
                    Eigen_utils,
                    Eigen_dsmat_s,
                    Eigen_dsmat_d,
                    Eigen_dsmat_c,
                    Eigen_dsmat_z,
                    Eigen_spmat_s,
                    Eigen_spmat_d,
                    Eigen_spmat_c,
                    Eigen_spmat_z,
                    Eigen_tensor_s,
                    Eigen_tensor_d
  CSources:         eigen_dsmat.h,
                    eigen_spmat.h,
                    eigen_utils.h,
                    eigen_tensor.h,
                    eigen_utils_stubs.c,
                    ffi_eigen_generated_stub.c
  CCOpt:            -O3 -Ofast -I$pkg_ctypes
                    -march=native -mfpmath=sse -flto -funroll-loops -ffast-math
  CCLib:            -L${libdir} -leigen
                    -lstdc++
  BuildDepends:     ctypes, ctypes.stubs

