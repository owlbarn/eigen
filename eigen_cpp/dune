(rule
 (targets libeigen_cpp_stubs.a dlleigen_cpp_stubs.so)
 (deps lib/libeigen.a lib/libeigen.so)
 (action
  (progn
    (copy lib/libeigen.a libeigen_cpp_stubs.a)
    (copy lib/libeigen.so dlleigen_cpp_stubs.so)
    )
  )
 )

(library
 (name eigen_cpp)
 (public_name eigen.cpp)
 (libraries ctypes)
 (c_library_flags
  (:standard -lstdc++)
  )
 (self_build_stubs_archive
  (eigen_cpp)
  )
 )
